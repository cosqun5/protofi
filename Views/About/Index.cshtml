@using Portfolio.Models.Class
@model List<About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Admin.cshtml";
    var a = 0;
}
<table class="table table-dark" style="margin-top:20px;">
    <tr>
        <th>#</th>
        <th>Name</th>
        <th>Surname </th>
        <th>Address </th>
        <th>Experience </th>
        <th>Completed </th>
        <th>Available </th>
        <th>Email </th>
        <th>Phone </th>
        <th>Information </th>
        <th>Delete </th>
        <th>Update </th>
    </tr>
    @foreach (var item in Model)
    {
        a++;
        <tr>
            <td>@a </td>
            <td> @item.Name</td>
            <td> @item.Surname</td>
            <td> @item.Address</td>
            <td> @item.Experience</td>
            <td> @item.Completed</td>
            <td> @item.Available</td>
            <td> @item.Email</td>
            <td> @item.Phone</td>
            <td> @item.Information</td>


            <td><a href="~/About/Delete/@item.Aboutid" class="btn btn-danger">Sil</a></td>
            <td><a href="~/About/Update/@item.Aboutid" class="btn btn-success">Guncelle</a></td>
        </tr>
    }
</table>
<a href="~/About/Create" class="btn btn-primary" style="width:150px;"> Daxil Et</a>


